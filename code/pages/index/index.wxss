/**靠上居中**/
.header {
  display: flex;
  color: #ee0000;
  font-size: 36rpx;
  font-weight: bold;
  justify-content: center;
  align-items: center;
  background-color: #ffffff;
  margin-top: 16rpx;
}

/**输入输出**/
.main_screen {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center; /* 水平居中 */
  align-items: center; /* 垂直居中 */
}

/*点击翻译*/
.translate_box{
  height:100rpx;
  width: 20%;
  background-color: #fcffe7;
  border: 4px ridge #66ccff;
  border-radius: 10px; /* 添加圆角 */
  display: flex;
  align-items: center; /* 垂直居中 */
  justify-content: center; /* 水平居中 */
}

/*底部三个按钮(整体)*/
.button_row {
  width: 700rpx;
  height:100rpx;
  display: flex;
  justify-content: space-between; /* 或者其他水平排列方式，比如 space-around, space-evenly 等 */
}

/*底部三个按钮*/
.button_t{
  display: flex;
  border-radius: 50px; /* 添加圆角 */
  align-items: center; /* 垂直居中 */
  justify-content: center; /* 水平居中 */
  background-color: #bef5d1;
  margin-right: 30rpx; /* 添加右侧外边距，为了相互隔离 */
}



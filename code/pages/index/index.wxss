/**靠上居中**/
.header {
  display: flex;
  color: #66CCFF;
  font-size: 18px;
  justify-content: center;
  align-items: center;
  background-color: #ffffff;
  margin-top: 8px;
}

/**输入输出**/
.main_screen {
  margin-top: 10px;
  display: flex;
  flex-direction: column;
  justify-content: center; /* 水平居中 */
  align-items: center; /* 垂直居中 */
}

/**输入**/
.input_box {
  display: flex;
  margin-top: 0px;
  padding: 15px;
  box-sizing: border-box;
  border: 1px solid #ccc;

}

/**输出**/
.output_box {
  display: flex;
  margin-top: 20px; /* 设置输出框距离输入框的上方间距 */
  padding: 15px;
  box-sizing: border-box;
  border: 1px solid #ccc;
}

/* 清空输入框 */
.clear_input_box {
  position: absolute;
  top: 208rpx;
  right: 32rpx;
  color: #999; /* 设置叉号颜色 */
  cursor: pointer;
  z-index: 10; 
}

/** 复制输出框 **/
.copy_output_box {
  position: absolute;
  top: 700rpx;
  right: 32rpx;
  color: #999; /* 设置颜色 */
  cursor: pointer;
  z-index: 10; 
}

/*语言选择按钮*/
.picker_language_selection {
  width: 300rpx;
  display: flex;
  justify-content: space-between;
  border: 2px solid #ee0000; /* 添加边框 */
  background-color: #c0fffb;
  border-radius: 4px; /* 添加圆角 */
  padding: 8rpx 16rpx; /* 添加内边距 */
}

/*底部三个按钮*/
.button_row {
  width: 700rpx;
  display: flex;
  justify-content: space-between; /* 或者其他水平排列方式，比如 space-around, space-evenly 等 */
}




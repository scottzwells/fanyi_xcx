/* pages/history/history.wxss */
.history_title{
  color:#66CCFF;
  margin-left: 70rpx;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
  font-weight: bold;
  color: #ee0000;
}

.clear_history_box{
  width:50rpx; /* 清空按键 */
  position: absolute;
  cursor:pointer;
  top:0px;
  right:10rpx;
}

.history-container {
  margin-top: 30rpx;
  padding: 20rpx;
}

.one_record {
  display: flex; /* 使用 Flex 布局 */
  justify-content: space-around; /* 沿主轴居中对齐 */
  margin-bottom: 20rpx;
}

.source,.translated{
  width:100%;
  max-height:150rpx; 
  overflow:hidden;
  /*text-overflow: ellipsis;
  white-space:nowrap;*/
}

.source {
  color: rgb(219, 106, 40);
}


.translated {
  color: #000000;
}

.delete{
  font-size: 100%;
  font-weight: bold;
  height:100%;
  cursor: pointer;
}

.sep_line{
  width:100%;
  margin:20rpx 0;
  border-bottom: 1px solid rgb(200,200,200);

}


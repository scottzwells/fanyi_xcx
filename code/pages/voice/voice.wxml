<!--pages/voice/voice.wxml-->
<text>这是语言识别界面</text>

<view class="mian_screen">
  <view class="button_row">
    <button class="button-text-blue" style="width:300rpx" bindtap="start">开始录音</button>
    <button class="button-text-red" style="width:300rpx" bindtap="stop">录音停止</button>
  </view>
  <view class="button_row">
    <button class="button-text-green" style="width:300rpx" bindtap="state_change">暂停/继续</button>
    <button class="button-text-yellow" style="width:300rpx" bindtap="play">播放录音</button>
  </view>
</view>
<text>这是本界面结束的地方</text>
/* pages/picture/picture.wxss */
.main_screen {
  margin-top: 10rpx;
  display: flex;
  flex-direction: column;
  /* justify-content: center; 水平居中 */
  align-items: center; /* 垂直居中 */
}


/*语言选择按钮*/
.picker_language_selection {
  width: 300rpx;
  height:50rpx;
  font-weight: bold;
  display: flex;
  align-items: center; /* 垂直居中 */
  justify-content: space-between;
  border: 3px solid #ddb68f; /* 添加边框 */
  background-color: #f6f9fd;
  border-radius: 4px; /* 添加圆角 */
  padding: 8rpx 16rpx; /* 添加内边距 */
  margin: 10rpx;
}

/** 文本的箭头 **/
.arrow_png {
  position: absolute;
  width:100rpx;
  top: 45rpx;
  right: 324rpx;
  z-index: 10; 
}


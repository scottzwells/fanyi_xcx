.image-container {
  display: flex;
  width: 100%; /* 设置容器的宽度为100%，不然图片显示不美观 */
  height: 350rpx;
  /* margin-left: 50rpx; */
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  align-items: center;
  justify-content: center;
}


.button-text{
  align-items: center;
  justify-content: center;
  background-color: #66ccff;
  color: #ffffff;
  border: 1mm ridge #00bbff;
  border-radius: 10rpx;  /*边框圆角*/
}

.button-re-trans{
  align-items: center;
  justify-content: center;
  background-color: #66ccff;
  color: #ffffff;
  border: 1mm ridge #00bbff;
  border-radius: 10rpx;  /*边框圆角*/
}

/**输入**/
.input_box {
  display: flex;
  margin-top: 15rpx;
  margin-bottom: 10rpx;
  /* margin-left: 10rpx;
  margin-right: 10rpx; */
  padding: 36rpx;
  box-sizing: border-box;
  border: 2px solid #ccc;
  width:720rpx;
  height:300rpx;
}

/**输出**/
.output_box {
  display: flex;
  margin-top: 20rpx; /* 设置输出框距离输入框的上方间距 */
  padding: 15rpx;
  box-sizing: border-box;
  border: 2px solid #ccc;
}
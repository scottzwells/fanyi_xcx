/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 


/*
  以下是自定义的css样式
  如非必要，不要修改
  自定义css有：
    1.语言选择
    2.输入框的样式
    3.输出框的样式
*/


/*1.语言选择*/
/*选择语言的容器*/
.picker_container{
  position: relative; /* 设置为相对定位 */
}
/** 文本的箭头 **/
.arrow_png {
  position: absolute;
  width: 100rpx;
  top: 50%; /* 相对于父级容器的垂直居中 */
  right: 35%; /*负值使箭头左移*/
  transform: translateY(-50%); /* 使箭头垂直居中 */
  z-index: 10;
  /* top: 115rpx;
  right: 324rpx; */
}
/*语言选择按钮*/
.picker_language_selection {
  width: 300rpx;
  height:50rpx;
  font-weight: bold;
  display: flex;
  align-items: center; /* 垂直居中 */
  justify-content: space-between;
  border: 3px solid #ddb68f; /* 添加边框 */
  background-color: #f6f9fd;
  border-radius: 4px; /* 添加圆角 */
  padding: 8rpx 16rpx; /* 添加内边距 */
  margin: 10rpx;
}


/*2.输入框的样式*/
/**输入框的容器**/
.input_container{
  position: relative; /* 设置为相对定位 */
}
/**输入**/
.input_box {
  display: flex;
  margin-top: 15rpx;
  margin-bottom: 10rpx;
  /* margin-left: 10rpx;
  margin-right: 10rpx; */
  padding: 36rpx;
  box-sizing: border-box;
  border: 2px solid #ccc;
  width:720rpx;
  height:300rpx;
}
/* 清空输入框 */
.clear_input_box {
  position: absolute;
  width:50rpx;
  top: 5%;
  right: 1%;
  cursor: pointer;
  z-index: 10; 
}


/*3.输出框的样式*/
/**输出框的容器**/
.output_container{
  position: relative; /* 设置为相对定位 */
}
/**输出**/
.output_box {
  display: flex;
  margin-top: 15rpx;
  margin-bottom: 10rpx;
  /* margin-left: 10rpx;
  margin-right: 10rpx; */
  padding: 36rpx;
  box-sizing: border-box;
  border: 2px solid #ccc;
  width:720rpx;
  height:300rpx;
}

/** 复制输出框 **/
.copy_output_box {
  position: absolute;
  width:50rpx;
  top: 5%;
  right: 1%;
  cursor: pointer;
  z-index: 10; 
}